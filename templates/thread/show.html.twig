{% extends 'base.html.twig' %}

{% block title %}StackOverFlowers - Thread {{thread.id}}{% endblock %}

{% block body %}
<section class="container mt-3">
    <a class="btn btn-dark" href="{{ path('app_home') }}"><i class="fa-solid fa-arrow-left pe-3" style="color: #ffffff;"></i>Back to home</a>
    
    <div class="d-flex justify-content-between align-items-center mt-3">
        <h2 class="">{{ thread.title }}</h2>
        <p class="p-0 m-0 fst-italic">{{ thread.postDate ? thread.postDate|date('d/m/Y') : '' }}</p>
    </div>
    <div class="">
        <div class="card-body">
            {{ thread.content}}
        </div>
    </div>
</section>

    <hr class="container">

<section class="container">
    <div class="d-flex flex-column justify-content-center w-75 mx-auto">
        <textarea name="" id="" cols="30" rows="5" placeholder="Your comment"></textarea>
        <input class="mt-3" type="text" placeholder="Your username">
        <button class="btn btn-dark mt-3"><i class="fa-solid fa-plus pe-2" style="color: #ffffff;"></i>New comment</button>
    </div>

{% for comment in thread.comment %}
    <div class="mt-5 container w-75 mx-auto">
        <div class="d-flex justify-content-between">
            <span class="fw-bold">{{comment.user}}</span>
            <span class="fst-italic">{{comment.commentdate|date('d/m/Y')}}</span>
        </div>
        <p class="pt-3">{{ comment.content }}</p>
        <hr>
    </div>
{% endfor %}
</section>

