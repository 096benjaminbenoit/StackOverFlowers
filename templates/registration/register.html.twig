{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1 class="text-center mt-3">Register</h1>

    {{ form_start(registrationForm, {'attr': {'class': 'container'}}) }}
        {{ form_row(registrationForm.username, {'attr': {'class': 'form-control mb-3'}}) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password',
            'attr': {'class': 'form-control mb-3'},
        }) }}
        {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input ms-2'}}) }}

        <button type="submit" class="btn btn-dark mt-3">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
