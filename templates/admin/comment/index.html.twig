{% extends 'base.html.twig' %}

{% block title %}Comment admin board{% endblock %}

{% block body %}
    <h1 class="text-center fw-bold my-4">Comment admin board</h1>

<div class='table-reponsive'>
    <table class="table table-striped w-75 mx-auto">
        <thead class="table-dark">
            <tr>
                <th>User</th>
                <th>Comment date</th>
                <th>Content</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.user }}</td>
                <td>{{ comment.commentDate ? comment.commentDate|date('d/m/Y') : '' }}</td>
                <td>{{ comment.content }}</td>
                <td>
                    <a class="btn btn-dark" href="{{ path('app_admin_comment_edit', {'id': comment.id}) }}"><i class="fa-solid fa-pen" style="color: #ffffff;"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
